{
  "private": true,
  "name": "remix-electron",
  "version": "0.0.0",
  "description": "",
  "license": "",
  "main": "desktop/main.js",
  "scripts": {
    "prepare": "remix setup node",
    "dev": "concurrently 'remix watch' 'pnpm nodemon-desktop' 'pnpm tailwind -- --watch'",
    "build": "pnpm tailwind -- --minify && remix build",
    "start": "cross-env NODE_ENV=production electron desktop/main.js",
    "nodemon-desktop": "cross-env NODE_ENV=development nodemon --watch desktop --ignore desktop/build --exec electron desktop/main.js",
    "tailwind": "tailwindcss --output app/tailwind.out.css"
  },
  "build": {
    "files": [
      "desktop",
      "public"
    ]
  },
  "dependencies": {
    "@remix-run/node": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "mime": "^3.0.0",
    "electron": "^16.0.7",
    "express": "^4.17.2",
    "postcss": "^8.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "tailwindcss": "^3.0.16"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/node": "^17.0.15",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "del-cli": "^4.0.1",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
