{
  "private": true,
  "name": "remix-electron",
  "version": "0.0.0",
  "description": "",
  "license": "",
  "main": "desktop/main.js",
  "scripts": {
    "prepare": "remix setup node",
    "dev": "concurrently 'remix watch' 'pnpm nodemon-desktop'",
    "build": "remix build",
    "start": "cross-env NODE_ENV=production electron desktop/main.cjs",
    "nodemon-desktop": "cross-env NODE_ENV=development nodemon --watch desktop --ignore desktop/build --exec electron desktop/main.cjs",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "build": {
    "files": [
      "desktop",
      "public"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@remix-run/node": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@remix-run/server-runtime": "^1.1.3",
    "@twind/tailwind": "^1.0.0-next.25",
    "cross-env": "^7.0.3",
    "mime": "^3.0.0",
    "express": "^4.17.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "twind": "^1.0.0-next.25"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.2",
    "@remix-run/dev": "^1.1.3",
    "@types/node": "^17.0.15",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "concurrently": "^7.0.0",
    "del-cli": "^4.0.1",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": [
    "app/twind-setup.ts"
  ],
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/build/**",
      "**/.cache/**"
    ],
    "rules": {
      "unicorn/prevent-abbreviations": "off",
      "import/no-unused-modules": "off"
    }
  },
  "prettier": "@itsmapleleaf/configs/prettier"
}
